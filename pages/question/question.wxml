

<view class='bd' >
  <text style="display: block;text-align: center;font-size: 20px;color: #f60;margin-top: 50px;">
  {{clock}}
</text>
  <view class='question'>
      {{q}}
  </view>

  <view  style='width:90%;' bindtap='click' data-index='{{index}}'  wx:for="{{options}}" wx:key='index' wx:for-item='i'>
    <button class="option" hover-class='is_checked' style="{{index==selectedIndex?'background-color:yellow':''}}" hover-stay-time='700' disabled='{{ischecked}}'>{{index}} - {{i}}</button>
  </view>

</view>